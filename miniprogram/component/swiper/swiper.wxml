 <view style='height:400rpx;'>
 <swiper style='height:400rpx'
   indicator-dots= "{{true}}"
   indicator-color="#fff"
   indicator-active-color="red"
    autoplay= "{{true}}"
    interval= "5000"
    duration= "1000"
  >
   <block wx:for="{{imgs}}" wx:key="{{item}}">
    <swiper-item>
      <image src="{{item}}"style="width:100%;height:400rpx;" />
    </swiper-item>
  </block>
  </swiper>

 </view>